<div class="container mt-5">

  <h2 class="mb-4 d-flex align-items-center" style="color: #0dcaf0;">
    <i class="bi bi-person-circle me-2"></i>
    Your Profile
  </h2>

  <!-- User info -->
  <div class="card mb-4" style="background-color: rgb(13, 15, 15); color: #ffffff; border-radius: 1rem;">
    <div class="card-body">
      <p><strong>Email:</strong> <%= current_user.email %></p>
      <p><strong>Member since:</strong> <%= current_user.created_at.strftime("%B %Y") %></p>
    </div>
  </div>

  <!-- Profile actions -->
  <div class="list-group mb-4">

    <!-- Watchlist -->
    <%= link_to profile_watchlist_path,
          class: "list-group-item list-group-item-action",
          style: "background-color: rgb(13, 15, 15); color: #ffffff;" do %>
      <i class="bi bi-bookmark-heart me-2" style="color: #0dcaf0;"></i>
      Watchlist
    <% end %>

    <!-- Liked movies -->
    <%= link_to profile_favorites_path,
          class: "list-group-item list-group-item-action",
          style: "background-color: rgb(13, 15, 15); color: #ffffff;" do %>
      <i class="bi bi-hand-thumbs-up me-2" style="color: #0dcaf0;"></i>
      Liked Movies
    <% end %>

    <!-- Rated movies -->
    <%= link_to profile_ratings_path,
          class: "list-group-item list-group-item-action",
          style: "background-color: rgb(13, 15, 15); color: #ffffff;" do %>
      <i class="bi bi-star-fill me-2" style="color: #f0ad4e;"></i>
      Rated Movies
    <% end %>

    <!-- Account settings -->
    <%= link_to edit_user_registration_path,
          class: "list-group-item list-group-item-action",
          style: "background-color: rgb(13, 15, 15); color: #ffffff;" do %>
      <i class="bi bi-gear me-2" style="color: #0dcaf0;"></i>
      Account Settings
    <% end %>

  </div>

  <!-- Logout -->
  <%= button_to destroy_user_session_path,
        method: :delete,
        class: "btn w-150",
        style: "background-color: #dc3545; color: #ffffff;" do %>
    <i class="bi bi-box-arrow-right me-2"></i>
    Logout
  <% end %>

</div>
