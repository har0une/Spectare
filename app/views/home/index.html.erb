<% 
  card_bg_color = "#010508ff"
  font_color = "#f2f2f2"
  page = (params[:page] || 1).to_i
  btn_text_color = "#d1d5db"
  btn_text_hover_color = "#adcae7eff"
%>

<style>
  /* Pagination buttons */
  .pagination-btn {
    color: <%= btn_text_color %>;
    font-size: 0.85rem;
    padding: 0.4rem 0.8rem;
    text-decoration: none;
    border-radius: 0.25rem;
    transition: color 0.3s ease;
    user-select: none;
  }
  .pagination-btn:hover {
    color: <%= btn_text_hover_color %>;
    cursor: pointer;
  }
  .pagination-container {
    display: inline-flex;
    gap: 0.5rem;
    background-color: <%= card_bg_color %>;
    padding: 0.25rem 0.5rem;
    border-radius: 0.375rem;
    justify-content: center;
  }
  .pagination-current {
    color: <%= btn_text_hover_color %>;
    font-weight: bold;
    font-size: 0.85rem;
    padding: 0.4rem 0.8rem;
    border-radius: 0.25rem;
    user-select: none;
    cursor: default;
  }

  /* Movie cards - thicker, subtle border */
  .movie-card {
    border: 2px solid rgba(255, 255, 255, 0.15);
    padding: 0.5rem;
    background-color: <%= card_bg_color %>;
    border-radius: 0.375rem;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }
  .movie-card:hover {
    border-color: rgba(255, 255, 255, 0.3);
    box-shadow: 0 4px 8px rgba(173, 202, 231, 0.2);
  }
</style>

<% if @movies.present? %>
  <!-- Movie Grid -->
  <div id="movies-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 1rem; color: <%= font_color %>;">
    <%= render partial: "movie_card", collection: @movies, as: :movie %>
  </div>

  <!-- Pagination Controls -->
  <div style="text-align: center; margin-top: 1.5rem;">
    <div class="pagination-container">
      <% if page > 1 %>
        <%= link_to "Previous", root_path(page: page - 1), remote: true, class: "pagination-btn" %>
      <% end %>

      <span class="pagination-current">
        Page <%= page %>
      </span>

      <% if page < 10 %>
        <%= link_to "Next", root_path(page: page + 1), remote: true, class: "pagination-btn" %>
      <% end %>

      <% if page > 1 %>
        <%= link_to "Back to First", root_path, remote: true, class: "pagination-btn" %>
      <% end %>
    </div>
  </div>
<% else %>
  <p>No movies found.</p>
<% end %>


















