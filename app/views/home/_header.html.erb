<nav>
  <% if user_signed_in? %>

    <!-- Welcome bar -->
    <div style="height: 32px; background-color: #dde1e2; color: #000000; text-align: center; line-height: 32px; font-size: 14px;">
      Welcome back, <strong><%= current_user.email %></strong>!
    </div>

    <!-- Main navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark sticky-top bg-dark"
         data-bs-theme="dark"
         style="background: linear-gradient(90deg, rgb(253, 255, 255) 0%, rgb(235, 237, 240) 1%, rgb(189,189,189) 21%, rgb(156,156,156) 36%, rgb(59, 60, 61) 61%, rgb(18, 19, 19) 84%, rgb(0, 0, 0) 100%);
                height: 84px; font-size: 150%;">

      <%= link_to root_path, class: "navbar-brand d-flex align-items-center", style: "color: black; font-size: 120%;" do %>
        <%= image_tag "si.png", alt: "Spectare Neon Icon",
              style: "height: 50px; width: 70px; margin-right: -17px;" %>
        <h4 style="font-size: 2.5rem; text-shadow: 0 0 6px #dee7e7ff;">pectare</h4>
      <% end %>

      <button class="navbar-toggler" type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <!-- Left links -->
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "About", about_path,
                  class: "nav-link",
                  style: "color: black; font-size: 80%; font-weight: bold; margin-top: 8px;" %>
          </li>
        </ul>

        <!-- Right buttons -->
        <div class="ml-auto d-flex align-items-center">
          <!-- Search -->
          <div class="mr-2">
            <form class="d-flex m-0">
              <button class="btn btn-outline-light p-2" type="submit" title="Search">
                <i class="bi bi-search"></i>
              </button>
            </form>
          </div>

          <!-- Shuffle / Recommend -->
          <div class="mr-2">
            <%= link_to "/movies/surprise", class: "btn btn-outline-light p-2", title: "Recommend" do %>
              <i class="bi bi-shuffle"></i>
            <% end %>
          </div>

          <!-- Logout -->
          <div>
            <%= button_to destroy_user_session_path,
                  method: :delete,
                  class: "nav-link btn btn-danger p-2",
                  form: { style: "display:inline" },
                  title: "Logout" do %>
              <i class="bi bi-box-arrow-right"></i>
            <% end %>
          </div>
        </div>

      </div>
    </nav>

  <% else %>

    <!-- Navbar for logged-out users -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      </ul>
    </nav>

  <% end %>
</nav>
